{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
	<h1 class="text-center">Liste des categories</h1>
	
	<table class="table text-center table-bordered border-dark align-middle">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th colspan="2">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td>
						<a href="{{ path('app_category_show', {'id': category.id}) }}">
							<button type="button"
							        class="btn">
								<i class="bi bi-eye"></i>
							</button>
						</a>
					</td>
					<td>
						<a href="{{ path('app_category_edit', {'id': category.id}) }}">
							<button type="button"
							        class="btn">
								<i class="bi bi-pencil"></i>
							</button>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
	<div class="d-flex justify-content-center">
		<a href="{{ path('app_category_new') }}">
			<button type="button"
			        class="btn">
				<h1>
					<i class="bi bi-plus-circle"></i>
				</h1>
			</button>
		</a>
	</div>
{% endblock %}
