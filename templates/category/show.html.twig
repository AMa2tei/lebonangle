{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between">
		<a href="{{ path('app_category_index') }}">
			<button type="button"
			        class="btn">
				<h1>
					<i class="bi bi-arrow-left"></i>
				</h1>
			</button>
		</a>
		<h1 class="text-center">Cat√©gorie</h1>
		
		<span style="visibility: hidden;"></span>
	</div>
	
	<table class="table text-center table-bordered border-dark align-middle">
		<tbody>
			<tr>
				<th class="col-2">Id</th>
				<td class="col-10">{{ category.id }}</td>
			</tr>
			<tr>
				<th class="col-2">Nom</th>
				<td class="col-10">{{ category.name }}</td>
			</tr>
		</tbody>
	</table>
	
	<div class="d-flex justify-content-between">
		{{ include('category/_delete_form.html.twig') }}
		
		<a href="{{ path('app_category_edit', {'id': category.id}) }}">
			<button type="button"
			        class="btn">
				<i class="bi bi-pencil"></i>
			</button>
		</a>
		
		<span style="visibility: hidden;"></span>
	</div>
{% endblock %}
