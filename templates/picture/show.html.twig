{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
	<h1>Picture</h1>
	
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ picture.id }}</td>
			</tr>
			<tr>
				<th>Path</th>
				<td>{{ picture.path }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>
					<img src="{{ vich_uploader_asset(picture, 'file') }}"
					     alt="{{ picture.path }}">
				</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ picture.createdAt ? picture.createdAt|date('d/m/Y H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Dernière modification</th>
				<td>{{ picture.updatedAt ? picture.createdAt|date('d/m/Y H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	
	<a href="{{ path('app_picture_index') }}">back to list</a>
	
	<a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>
	
	{{ include('picture/_delete_form.html.twig') }}
{% endblock %}
