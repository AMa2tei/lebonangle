{% extends 'base.html.twig' %}

{% block title %}Liste des images{% endblock %}

{% block body %}
	<h1 class="text-center">Liste des images</h1>
	
	<table class="table text-center table-bordered border-dark">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom du fichier</th>
				<th>Date de création</th>
				<th colspan="2">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for picture in pictures %}
				<tr>
					<td>{{ picture.id }}</td>
					<td>{{ picture.path }}</td>
					<td>{{ picture.createdAt ? picture.createdAt|date('d/m/Y H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_picture_show', {'id': picture.id}) }}">
							<button type="button"
							        class="btn">
								<i class="bi bi-eye"></i>
							</button>
						</a>
					</td>
					<td>
						<a href="{{ path('app_picture_edit', {'id': picture.id}) }}">
							<button type="button"
							        class="btn">
								<i class="bi bi-pencil"></i>
							</button>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucune image trouvées</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
	<div class="d-flex justify-content-center">
		<a href="{{ path('app_picture_new') }}">
			<button type="button"
			        class="btn">
				<h1>
					<i class="bi bi-plus-circle"></i>
				</h1>
			</button>
		</a>
	</div>
{% endblock %}
